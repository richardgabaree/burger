<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
			<img src="assets/img/bacon-burger.png" alt="Eat-Da-Burger App" width="200" height="200">
	        <h1>Eat-Da-Burger App</h1>
	        <p></p>
	    </div>
  	</div>

	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Burgers Available To Eat!</h2>

			<ul>
				{{#each burgers}}
				{{#unless devour}}
				{{> burgers/burger-block devour=true}}
				{{/unless}}
				{{/each}}
				</ul>

	    	</div>

	    <div class="col-sm-6">

			  <h2>Burgers That Have Been Eaten</h2>

				<ul>
				{{#each burgers}}
				{{#if devour}}
				{{> burgers/burger-block devour=false}}
				{{/if}}
				{{/each}}
				</ul>
			
	    </div>

  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add A Burger!</h2>

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <p>Enter a burger you want to order and click the Submit Order button.</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-primary" type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>
	<!-- end .row -->

</div>